<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.rechild.advancedtaskkiller"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@id/main_title_layer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

<!--         <Button
            android:id="@id/btnCheck"
            android:layout_width="wrap_content"
            android:layout_height="60.0dip"
            android:paddingBottom="0.0dip"
            android:paddingTop="0.0dip"
            android:text="@string/btnCheck"
            android:textSize="19.0dip"
            android:textStyle="bold"
            android:typeface="serif" /> -->

        <Button
            android:id="@id/btn_task"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:padding="0.0dip"
            android:text="@string/btn_task"
            android:textSize="19.0dip"
            android:textStyle="bold"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/adviewLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

    <ListView
        android:id="@id/listbody"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/adviewLayout"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/main_title_layer"
        android:scrollbars="vertical" />

</RelativeLayout>